{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "eqeqeq": "warn",
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "no-console": "warn",
    "no-const-assign": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"]
  }
}
